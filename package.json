    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "ts-node": "^10.2.0",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "eslint": "^7.32.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --max-warnings 0 --cache",
    "*.{js,ts,tsx,md}": "prettier"
  }
}
